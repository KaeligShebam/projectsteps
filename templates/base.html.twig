<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}{% block title_base %}Étapes projets clients{% endblock %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/images/logo-to-do-list-vert.ico') }}" />
    {% block stylesheets %}

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.css" rel="stylesheet">
        <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css">
        <link href="{{ asset('/assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('/assets/css/root.css') }}" rel="stylesheet">
        <link href="{{ asset('/assets/css/front/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('/assets/css/motdepasse.css') }}" rel="stylesheet">
        <link href="{{ asset('/assets/css/front/responsive.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top bg-white-shebam mx-auto ">
            <a href="{{ path('home') }}">
                <img class="navbar-img" src="{{ asset('assets/images/logo-to-do-list-hor.png') }}" alt="Logo de la to do list Shebam!">
            </a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                </ul> 
                <ul class="navbar-nav">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}<a class="navbar-text color-blue-dark-shebam" title="Aller sur l'administration" href="{{ path('admin') }}">Administration</a> {% endif %}<a class="navbar-text color-blue-dark-shebam" title="Aller sur mon compte" href="{{ path('account') }}">Compte</a><a class="navbar-text color-blue-dark-shebam" title="Se déconnecter" href="{{ path('app_logout') }}">Déconnexion</a>
                    {% else %}
                    <a class="navbar-text color-blue-dark-shebam" title="S'inscrire" href="{{ path('register') }}">Inscription</a>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <nav class="mobile-bottom-nav">
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            <a href="{{ path('admin') }}"><i class="fas fa-tools"></i><br>Admin</a>
                        </div>		
                    </div>
                {% endif %}
            {% endif %}
            {% if app.user %}
                {% if is_granted('ROLE_USER') %}
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            {% if 'home' != app.request.attributes.get('_route') %}
                                <a href="{{ path('home') }}"><i class="fas fa-home"></i><br>Tâches en cours</a>
                            {% else %}
                                <a href=""><i class="fas fa-home"></i><br>Tâches archivées</a>
                            {% endif %}
                        </div>		
                    </div>
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            <a href="{{ path('account') }}"><i class="fas fa-user-alt"></i><br>Compte</a>
                        </div>		
                    </div>
                {% endif %}
            {% endif %} 
            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="mobile-bottom-nav__item">
                <div class="mobile-bottom-nav__item-content">
                    <a href="{{ path('register') }}"><i class="fas fa-user-plus"></i><br>Inscription</a>
                </div>		
            </div>
            {% endif %}
        </nav>
    </header>

    <main role="main">
        <div class="container-fluid" style="margin-top: 150px;">
            {% block content %}{% endblock %}
        </div>
    </main>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/TableDnD/1.0.3/jquery.tablednd.min.js"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/locale/bootstrap-table-fr-FR.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.min.js"></script>
    <script src="{{ asset('assets/js/motdepasse.js') }}"></script>
    <script src="{{ asset('assets/js/tableOrder.js') }}"></script>
{% endblock %}

</body>
</html>