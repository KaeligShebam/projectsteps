{% extends 'back/index.html.twig' %}

{% block title %}Ajouter un utilisateur - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	<div>
		{% block titre_admin_page %}Utilisateur - Ajouter{% endblock %}
	</div>
		
		{% block admin_utilisateur %}
		{{ form_start(form_admin_user_add) }}
			<div class="was-validated form-back background-login is-valid">
				<div class="form-group">
					{{ form_row(form_admin_user_add.firstname) }}
					<div class="mb-3"></div>
					{{ form_row(form_admin_user_add.lastname) }}
					<div class="mb-3"></div>
					{{ form_row(form_admin_user_add.email) }}
					<div class="mb-3"></div>
					{{ form_row(form_admin_user_add.password) }}
					<div class="mb-3"></div>
					{{ form_row(form_admin_user_add.roles) }}
					<div class="mb-3"></div>
					{{ form_row(form_admin_user_add.submit) }}
					<div class="mb-3"></div>
				</div>
			</div>
		{{ form_end(form_admin_user_add) }}
	{% endblock %}
{% endblock %}


