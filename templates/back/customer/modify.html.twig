{% extends 'back/index.html.twig' %}

{% block title %}Modifier le client - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	<div>
		{% block titre_admin_page %}{% block title_titre_admin_page_base %}{{ parent() }}{% endblock %}<a href="{{path('customer_list_admin')}}">Client</a> - Modification du client <i class="fas fa-arrow-right"></i> {{ customer.name }}{% endblock %}
	</div>
	{% block admin_utilisateur %}
		{{ form_start(form_customer_modify_admin) }}
		<div class="was-validated form-back background-login is-valid">
			{% if notification %}
				<hr>
					<div class="alert alert-success form-sucess text-center">{{ notification }}<br>
						<hr>
						<a href="{{ path('customer_list_admin') }}">Retourner sur la liste des clients</a>
					</div>
				<hr>
			{% endif %}
			<div class="form-group">
				{{ form_row(form_customer_modify_admin.name) }}
				<div class="mb-3"></div>
				{{ form_row(form_customer_modify_admin.submit) }}
			</div>
		</div>
	{{ form_end(form_customer_modify_admin) }}
	{% endblock %}
{% endblock %}